{% extends 'layoutAdmin.html.twig' %}

{% block title %}
	{{ parent() }}
	|| Objectif
{% endblock %}

{% block body %}
	<main class='container'>

		<h1 class="text-center m-5">Objectif</h1>
		<div class="d-flex">
			<a class='btn btn-primary my-4 fs-5' href="{{ path('app_objective_new') }}">
            <i class= "bi bi-plus-circle me-2 align-items-center" ></i>
            Ajouter un objectif</a>
		</div>

		<table class="table my-3">
			<thead class="fs-4">
				<tr>
					<th>Objectif global</th>
					<th>Objectif du mois</th>
				</tr>
			</thead>
			<tbody class="fs-5">
				{% for objective in objectives %}
					<tr>
						<td>{{ objective.globalName }}</td>
						<td>{{ objective.monthName }}</td>
						<td class="d-flex justify-content-end">
							<a class="btn btn-warning mx-3 fs-5" href="{{ path('app_objective_edit', {'id': objective.id}) }}">
                            <i class= "bi bi-pen-fill me-2" ></i>
                            Modifier
                            </a>
							{{ include('objective/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">aucun dossier trouv√©</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>

{% endblock %}
