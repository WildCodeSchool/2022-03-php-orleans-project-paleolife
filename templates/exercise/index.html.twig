{% extends 'layoutAdmin.html.twig' %}

{% block title %}{{ parent() }} || Liste exercices{% endblock %}

{% block body %}
<main class="container">
    <h1 class="mt-4 text-center">Liste des exercices</h1>
   <div>
    <a class="btn btn-primary d-inline-flex justify-content-end fs-5" href="{{ path('app_exercise_new') }}"><i class="bi bi-plus-circle me-2"></i>Ajouter un exercice</a>
    </div>
    <table class="table">
        <thead class="fs-4">
            <tr>
                <th>Nom</th>
                <th>Durée</th>
                <th>Répetition</th>
            </tr>
        </thead>
        <tbody class="fs-5">
        {% for exercise in exercises %}
            <tr>
                <td>{{ exercise.name }}</td>
                <td>{{ exercise.duration | format_number({fraction_digit: 2}) }}</td>
                <td>{{ exercise.repetition }}</td>
                <td class="d-flex justify-content-end">
                    <a class="btn btn-warning mx-3 fs-5" href="{{ path('app_exercise_edit', {'id': exercise.id}) }}"><i class="bi bi-pen-fill me-2"></i>Modifier</a>
                    {{ include('exercise/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'exercice trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</main>
{% endblock %}
