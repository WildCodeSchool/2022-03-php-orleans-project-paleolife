{% extends 'layoutAdmin.html.twig' %}

{% block title %}
	Modifier le client
{% endblock %}

{% block body %}
	<div class="row mt-5">
		<div class="col-md-2">
			<nav id="sidebar" class="d-flex flex-column sticky-md-top ps-4">
				<h1 class="d-flex justify-content-start my-md-3 text-primary ms-2">{{ client.user.name }}</h1>
				<div class="d-none d-md-block">
					<a href="#goal" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2"><i class="bi bi-speedometer2 me-3"></i>Objectifs</a>
					<a href="#nutrition" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2"><i class="bi bi-cup-straw me-3"></i>Nutrition</a>
					<a href="#session" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2"><i class="bi bi-check-all me-3"></i>Séances</a>
					<a href="#measurement" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2"><i class="bi bi-rulers me-3"></i>Mensurations</a>
					<a href="{{ path('app_user_index') }}" class="fs-4 d-flex justify-content-start text-dark mt-3 text-decoration-none ms-2"><i class="bi bi-box-arrow-left me-2 "></i>Retour</a>
				</div>
			</nav>
		</div>
		<div data-bs-spy="scroll" data-bs-target="#sidebar" data-bs-offset="0" data-bs-smooth-scroll="true" class="col-md-8" tabindex="0">
			<div class="bg-light div-light d-none d-lg-block position-relative"></div>
			<main class="container">
				<div class="d-flex justify-content-between mb-4 align-items-center">
					<h2 id="goal">
						<i class="bi bi-speedometer2"></i>
						Objectifs
					</h2>
				</div>
				<section class="fs-5 mb-5">
					{{ include('adminClient/_form.html.twig', {'button_label': 'Valider'}) }}
				</section>
				<section class="mb-5">
					<div class="mt-5 pt-4">
						<h2 id="nutrition" class="mb-3 mt-5 pb-2 d-flex border-bottom border-primary border-1">
							<i class="bi bi-cup-straw me-3"></i>
							Nutrition
							<a href="{{ path('app_nutrition_meal_new', {'id': client.id}) }}" class="btn btn-outline-primary text-dark mb-2 ms-5">
								<i class="bi bi-plus-circle me-2"></i>
								Ajouter une nutrition</a>
						</h2>
					</div>
					<div class="shadow-sm rounded">
						<table class="table table-hover mt-3">
							<thead class="m-5">
								<tr class="fs-4">
									<th>
										Nom du repas
									</th>
									<th>
										Protéines en g
									</th>
									<th>
										Lipides en g
									</th>
									<th>
										Glucides en g
									</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
								{% for nutrition in client.nutritionMeals %}
									<tr class="fs-5">
										<td class="mx-3">{{nutrition.mealName}}</td>
										<td class="mx-3">{{nutrition.proteins}}</td>
										<td class="mx-3">{{nutrition.lipids}}</td>
										<td class="mx-3">{{nutrition.carbohydrate}}</td>
										<td class="d-flex justify-content-end">
											<a href="{{ path('app_nutrition_meal_edit', { 'id' : nutrition.id }) }}" class="btn btn-sm btn-outline-secondary mx-2">
												<i class="bi bi-pen-fill me-2"></i>
												Modifier
											</a>
											{{ include('nutrition_meal/_delete_form.html.twig') }}
										</td>
									</tr>
								{% endfor %}
							</tbody>
						</table>
					</div>
				</section>
				<section class="mb-5">
					<div class="mt-5 pt-4">
						<h2 id="session" class="mb-3 mt-5 pb-2 d-flex border-bottom border-primary border-1">
							<i class="bi bi-check-all me-3"></i>
							Séances et exercices
							<a href="{{ path('app_session_new', { 'id' : client.id }) }}" class="btn btn-outline-primary text-dark ms-5 mb-2 ">
								<i class="bi bi-plus-circle me-2"></i>Ajouter une séance
							</a>
						</h2>
					</div>
					{% for session in sessions %}
						<h4 class="mt-3 d-flex align-items-center">
							Séance
							{{session.number}}:
							{{ session.name }}
							<a href="{{ path('app_session_edit', { 'id' : session.id }) }}" class="btn btn-sm btn-outline-secondary mx-2">
								<i class="bi bi-pen-fill me-2"></i>
								Modifier
							</a>
							{{ include('session/_delete_form.html.twig') }}
						</h4>
						<div class="shadow-sm rounded">
							<table class="table table-hover">
								<thead class="m-5">
									<tr class="fs-5">
										<th>
											Nom de l'exercice
										</th>
										<th>
											Durée de repos
										</th>
										<th>
											Nombre de répétition
										</th>
									</tr>
								</thead>
								<tbody>
									{% for exercise in session.exercises %}
										<tr class="fs-5">
											<td class="mx-3 col-lg-4">
												{{ exercise.name }}
											</td>
											<td class="mx-3 col-lg-3">
												{{ exercise.duration }}
											</td>
											<td class="mx-3 col-lg-3">
												{{ exercise.repetition }}
											</td>

										</tr>
									{% endfor %}

								</tbody>
							</table>
						</div>
						<div class="mb-5">
							<p class="fs-5">Commentaire du client :
								{% if  session.comment  is empty %}
									Aucun commentaire
								{% else %}
									{{ session.comment }}
								{% endif %}
							</p>
						</div>
					{% endfor %}
				</section>
				<div class="mt-5 pt-4">
					<h2 id="measurement" class="mb-3 mt-5 pb-2 d-flex border-bottom border-primary border-1">
						<i class="bi bi-rulers me-3"></i>
						Mensurations
						<a href="{{ path('app_measurement_new') }}" class="btn btn-outline-primary text-dark ms-5 mb-2 ">
							<i class="bi bi-plus-circle me-2"></i>Ajouter une mensuration
						</a>
					</h2>
				</div>
				<div class="shadow-sm rounded">
					{% include "component/_measurement_client.html.twig" %}
				</div>
			</main>
		</div>
	</div>
{% endblock %}
