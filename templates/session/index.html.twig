{% extends 'layoutAdmin.html.twig' %}

{% block title %}Admin séance
{% endblock %}

{% block body %}
	<main class="container mb-5">
		<h1 class="d-flex justify-content-center my-5">Séance</h1>
		<a class="btn btn-primary d-inline-flex justify-content-end fs-5" href="{{ path('app_session_new') }}">
			<i class="bi bi-plus-circle me-2"></i>Ajouter une séance</a>
		<table class="table">
			<thead class="fs-4">
				<tr>
					<th>Nom</th>
					<th>Numéro</th>
				</tr>
			</thead>
			<tbody class="fs-5">
				{% for session in sessions %}
					<tr>
						<td>{{ session.name }}</td>
						<td>{{ session.number }}</td>
						<td class="d-flex justify-content-end gap-2">
							<a class="btn btn-warning mx-3 fs-5" href="{{ path('app_session_edit', {'id': session.id}) }}">
								<i class="bi bi-pen-fill me-2"></i>Modifier</a>
							{{ include('session/_delete_form.html.twig') }}
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="4">no records found</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</main>
{% endblock %}
